        .form__wrapper
            .form__text
                .subtitle 
                    h3 Send Me a Message
                    p Have a specific inquiry or message for us? Please use the contact form below, and we'll get back to you promptly.
            .form__info 
                form(action="#" name="contact" autocomplete="on")
                    .form__inner
                        label(class="form__input")
                            p First Name
                            input(type="text" placeholder="FIRST NAME" required)
                        label(class="form__input")
                            p Last Name
                            input(type="text" placeholder="LAST NAME" required)
                        label(class="form__input")
                            p Email
                            input(type="email" placeholder="EMAIL ADDRESS" required)
                        label(class="form__input")
                            p Phone Number
                            input(type="phone" placeholder="PHONE NUMBER" required)
                    label(class="form__textarea")
                        p Your Message
                        <textarea required placeholder="MESSAGE" rows="1"></textarea> 
                    .form__button
                            p Send Message
